@page
@model RideService.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{
    foreach (Ride ride in Model.AllRides)
    {
        <article>
            <h2>@ride.Name</h2>
            <hr />
            <x:a asp-page="ViewRide" asp-route-index="@(ride.Id)" ><img src="/img/thumbnails/@(ride.Name).jpg" alt="@ride.Name" /></x:a>
            <h3>Status: @ride.GetStatus()</h3>
            <hr />
            <p>@ride.GetShortDescription()</p>
        </article>
    }
}